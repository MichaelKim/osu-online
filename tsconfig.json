{
  "compilerOptions": {
    "jsx": "react-jsx",
    "isolatedModules": true,
    "lib": ["ES2019", "DOM"],
    "target": "ES2019",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
